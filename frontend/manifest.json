{
    "manifest_version": 3,
    "name": "LeetLog Hub",
    "version": "0.1.0",
    "description": "Automatically log your LeetCode solutions to GitHub and Notion.",
        "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "https://leetcode.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "interceptor.js"
            ],
            "run_at": "document_start",
            "world": "MAIN"
        },
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "bridge.js"
            ],
            "run_at": "document_idle",
            "world": "ISOLATED"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/image.png",
            "48": "images/image.png",
            "128": "images/image.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "externally_connectable": {
        "matches": [
            "http://localhost:8080/*"
        ]
    },
    "icons": {
        "16": "images/image.png",
        "48": "images/image.png",
        "128": "images/image.png"
    }
}
